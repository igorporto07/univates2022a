<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListaVeiculosActivity"
    android:orientation="vertical"
    style="@style/Teste">

    <TextView
        android:id="@+id/lblNome_item_veiculo"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:textSize="25dp"
        style="@style/Rotulo"
        android:text="Nome"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Marca:"
            android:textSize="17dp"
            style="@style/RotuloBlack"/>

        <TextView
            android:id="@+id/lblMarca_item_Veiculo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="10dp"
            style="@style/ItenList"
            android:text="Data"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ano:"
            android:textSize="17dp"
            style="@style/RotuloBlack"/>

        <TextView
            android:id="@+id/lblAno_item_veiculo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_marginTop="2dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="10dp"
            style="@style/ItenList"
            android:text="Telefone"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Placa:"
            android:textSize="17dp"
            style="@style/RotuloBlack"/>

        <TextView
            android:id="@+id/lblPlaca_item_veiculo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_marginTop="2dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="10dp"
            style="@style/ItenList"
            android:text="CPF"/>

    </LinearLayout>

</LinearLayout>