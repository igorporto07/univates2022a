<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/Blackground"
    tools:context=".foradeuso.TabuadaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/txtTabuada_tabu"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            style="@style/Teste"
            android:inputType="number"/>

        <Button
            android:id="@+id/btnTabuada_tabu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            style="@style/BotaoGradient4"
            android:text="CALCULAR"/>

        <Button
            android:id="@+id/btnVoltar_tabu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            style="@style/BotaoGradient3"
            android:text="Voltar"/>

    </LinearLayout>

    <TextView
        android:id="@+id/lblTabuada_tabu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Rotulo"
        android:text="TABUADA" />

</LinearLayout>