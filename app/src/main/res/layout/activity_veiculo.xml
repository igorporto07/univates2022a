<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/Blackground"
    android:padding="10dp"
    tools:context=".VeiculoActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Rotulo"
        android:text="Marca:"
        android:textSize="20dp"
        android:layout_marginTop="20dp"/>

    <Spinner
        android:id="@+id/spiMarca_veiculo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Rotulo"
        android:text="Modelo:"
        android:textSize="20dp"
        android:layout_marginTop="20dp"/>

    <Spinner
        android:id="@+id/spiModelo_veiculo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Rotulo"
        android:text="Placa:"
        android:textSize="20dp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/txtplaca_veiculo"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        style="@style/Teste"
        android:enabled="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Rotulo"
        android:text="Ano Fabricação:"
        android:textSize="20dp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/txtAno_veiculo"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        style="@style/Teste"
        android:inputType="text"/>

    <Button
        android:id="@+id/btnExcluir_cliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/BotaoGradient3"
        android:text="Excluir"/>

</LinearLayout>